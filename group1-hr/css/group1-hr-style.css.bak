body{
	background-color: lightblue;
	font-family: Georgia, Arial, serif;
}

header{
	background-color: salmon;
	color: white;
	text-align: center;
	padding: 2px;
	margin: auto;
}

nav{
	width: 20px;
	float: right;
}

nav ul{
	list-style-type: none;
	padding: auto;
	font-size: 14px;
}

ul{
	list-style-type: none;
	padding: 2px;
	border: solid black 2px;
}

li{
	border: solid black 2px;
	padding: auto;
}

a{
	text-decoration: none;
	color: blue;
}

img{
	border: solid black 2px;
	width: auto;
}

h1{
	color: black;
}

h2{
	color: white;
}

h3{
	color: salmon;
}

thead{
	background-color: black;
	color: white;
}

table, th, td{
	border: solid black 2px;
}

tbody{
	color: white;
}

tfoot{
	font-size: 12px;
	color: black;
	background-color: white;
}

caption{
	font-family: Georgia, Arial, serif;
	font-weight: bold;
	font-size: 16px;
	color: black;
	border: solid black 2px;
}

button{
	background-color: black;
	color: white;
	font-size: 8px;
}

legend{
	background-color: black;
	color: white;
	padding: auto;
}